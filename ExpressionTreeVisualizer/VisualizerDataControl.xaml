<ag:AutoGrid x:Class="ExpressionTreeVisualizer.VisualizerDataControl" ColumnCount="3" Columns="*,Auto,*" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:my="clr-namespace:ExpressionTreeVisualizer" xmlns:ag="clr-namespace:WpfAutoGrid;assembly=WpfAutoGrid">
    <FrameworkElement.Resources>
        <my:RootConverter x:Key="RootConverter" />
        <my:ConditionalFormatConverter x:Key="ConditionalFormatConverter" />
        <HierarchicalDataTemplate x:Key="ExpressionNodeTemplate" ItemsSource="{Binding Value.Children}">
            <TextBlock>
                <TextBlock.ToolTip>
                    <ag:AutoGrid ColumnCount="2" Columns="65,Auto" RowCount="5">
                        <TextBlock Text="Path" />
                        <TextBlock Text="{Binding Key}" FontWeight="Bold" />
                        <TextBlock Text="Node type" />
                        <TextBlock Text="{Binding Value.NodeType}" FontWeight="Bold" />
                        <TextBlock Text="Type" />
                        <TextBlock Text="{Binding Value.ReflectionTypeName}" FontWeight="Bold" />
                        <TextBlock Text="Name" />
                        <TextBlock Text="{Binding Value.Name}" FontWeight="Bold" />
                        <TextBlock Text="Value" />
                        <TextBlock Text="{Binding Value.StringValue}" FontWeight="Bold" />
                    </ag:AutoGrid>
                </TextBlock.ToolTip>
                <Run Foreground="DarkGray" Text="{Binding Key, Mode=OneTime, Converter={StaticResource ConditionalFormatConverter}, ConverterParameter=\{0\} -}" />
                <Run Text="{Binding Value.NodeType, Mode=OneTime}" FontWeight="Bold" />
                <Run Text="{Binding Value.ReflectionTypeName, Mode=OneTime, Converter={StaticResource ConditionalFormatConverter}, ConverterParameter= ({0})}" />
                <Run Text="{Binding Value.Name, Mode=OneTime, Converter={StaticResource ConditionalFormatConverter}, ConverterParameter= \{0\}}" />
                <Run Text="{Binding Value.StringValue, Mode=OneTime, Converter={StaticResource ConditionalFormatConverter}, ConverterParameter=\= {0}}" />
            </TextBlock>
        </HierarchicalDataTemplate>
    </FrameworkElement.Resources>
    <DockPanel>
        <ag:AutoGrid ColumnCount="3" RowCount="2" Orientation="Vertical" Columns="*,*,2*" DockPanel.Dock="Bottom">
            <ag:AutoGrid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Background" Value="Gray" />
                </Style>
                <Style TargetType="DataGrid">
                    <Setter Property="IsReadOnly" Value="True" />
                    <Setter Property="AutoGenerateColumns" Value="False" />
                </Style>
            </ag:AutoGrid.Resources>
            <Label Content="Constants" />
            <DataGrid ItemsSource="{Binding Constants}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Type}" Header="Type" />
                    <DataGridTextColumn Binding="{Binding Value}" Header="Value" />
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="Parameters" />
            <DataGrid ItemsSource="{Binding Parameters}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                    <DataGridTextColumn Binding="{Binding Type}" Header="Type" />
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="Closed-over variables" />
            <DataGrid ItemsSource="{Binding ClosedVars}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Closure}" Header="Closure" />
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                    <DataGridTextColumn Binding="{Binding Type}" Header="Type" />
                    <DataGridTextColumn Binding="{Binding Value}" Header="Value" />
                </DataGrid.Columns>
            </DataGrid>
        </ag:AutoGrid>
        <TreeView ItemsSource="{Binding NodeData, Converter={StaticResource RootConverter}}" ItemTemplate="{StaticResource ExpressionNodeTemplate}">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="True" />
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
    </DockPanel>
    <GridSplitter HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="SlateGray" ShowsPreview="True" Width="5" Grid.Column="1" />
    <DockPanel Grid.Column="2">
        <Button Content="*" HorizontalAlignment="Right" DockPanel.Dock="Top" />
        <TextBlock Text="{Binding Source}" TextWrapping="Wrap" FontFamily="Consolas" FontSize="14" />
    </DockPanel>
</ag:AutoGrid>
