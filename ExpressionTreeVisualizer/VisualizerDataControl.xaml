<ag:AutoGrid x:Class="ExpressionTreeVisualizer.VisualizerDataControl" ColumnCount="3" Columns="*,Auto,*" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:my="clr-namespace:ExpressionTreeVisualizer" xmlns:ag="clr-namespace:WpfAutoGrid;assembly=WpfAutoGrid">
    <FrameworkElement.Resources>
        <my:RootConverter x:Key="RootConverter" />
        <HierarchicalDataTemplate x:Key="ExpressionNodeTemplate" ItemsSource="{Binding Value.Children}">
            <TextBlock>
                <Run Foreground="Gray" Text="{Binding Key, Mode=OneTime}" /> - <Run Text="{Binding Value.NodeType, Mode=OneTime}" /> (<Run Text="{Binding Value.ReflectionTypeName, Mode=OneTime}" Foreground="Gray" />)
            </TextBlock>
            
            <!--<StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Key}" Foreground="DarkGray" />
                <TextBlock Text="{Binding Value.NodeType}" />
            </StackPanel>-->
        </HierarchicalDataTemplate>
    </FrameworkElement.Resources>
    <DockPanel>
        <ag:AutoGrid ColumnCount="2" RowCount="3" Columns="Auto,*" DockPanel.Dock="Bottom"> 
            <TextBlock Text="Label1" />
            <TextBlock Text="Value1" />
            <TextBlock Text="Label2" />
            <TextBlock Text="Value2" />
        </ag:AutoGrid>
        <TextBlock Text="Closed-over variables" Background="Gray" DockPanel.Dock="Bottom" />
        <TreeView ItemsSource="{Binding NodeData, Converter={StaticResource RootConverter}}" ItemTemplate="{StaticResource ExpressionNodeTemplate}" />
    </DockPanel>
    <GridSplitter HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Black" ShowsPreview="True" Width="5" Grid.Column="1" />
    <DockPanel Grid.Column="2">
        <Button Content="*" HorizontalAlignment="Right" DockPanel.Dock="Top" />
        <TextBlock Text="{Binding Source}" />
    </DockPanel>
</ag:AutoGrid>
